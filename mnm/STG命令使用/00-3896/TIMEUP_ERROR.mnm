OR> V1 #100              ; Task_No
LD> V1 #31               ; Task_No
AND< V1 #100             ; Task_No
ORL
OR< V2 #0                ; SensorCode
OR> V2 #4095             ; SensorCode
SET R40008
CON
SET @R015
;<h1/>Init/初期化
LD @CR2008
ORB @R000
ANB R59915
RES P9                   ; Fin_Relay
SET @R014
;<h1/>Pause Request/ﾎﾟｰｽﾞ要求
;・ﾏｸﾛ実行中にPAUSE要求にてHALT実施
