LDB R59915
LDA V0                   ; Group_No
CON
SUB #1
CON
STA Z8
CON
ANB R46104
ANB R48000:Z8
ANB R46208:Z8
SET R48000:Z8
MPS
SET @R000
CON
SET @R001
MPP
AND CR2002
RES R54700:Z8
